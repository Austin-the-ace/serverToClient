#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/socket.h>
#include <sys/types.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <pthread.h>

#define PROTOPORT 5193
#define BUFFER_SIZE 1024
#define MAX_NAME_SIZE 64
#define LEAVE_REQUEST "<LEAVE>"
#define LEAVE_CONFIRMED "<CONFIRMED>"
#define DISCOVERY_PORT 6000
#define DISCOVERY_TIMEOUT 3

int roomsocket;
int running = 1;
int allow_prompt = 0;

//struct for join requests
struct join_t {
	char room_name[MAX_NAME_SIZE];
	char username[MAX_NAME_SIZE];
};



//function to receive messages from chat room
void* receiveMsg(void* arg) {
	char message[BUFFER_SIZE];
	char* username = (char*)arg;

	while (running) {
		memset(message, 0, sizeof(message));
		
		//receives message from room
		int num_recv = recv(roomsocket, message, sizeof(message) - 1, 0);

		if (num_recv <= 0) {
			printf("CLIENT: Disconnected from server.\n");
			running = 0;
			break;
		}

		message[num_recv] = '\0';

		//checks for leave confirmation
		if (strcmp(message, LEAVE_CONFIRMED) == 0) {
			printf("\nCLIENT: Leave successful.\n");
			running = 0;
			break;
		}

		//displays received message
		printf("\r%s", message);

		if (allow_prompt) {
			//displays prompt for further user input
			printf("%s: ", username);
			fflush(stdout);
		}
	}

	pthread_exit(0);
}


//uses UDP broadcast to discover server
int discoverServer(char* server_ip) {
	int sock;
	struct sockaddr_in broadcast_addr, recv_addr;
	socklen_t addr_len = sizeof(recv_addr);
	char buffer[BUFFER_SIZE];

	//creates UDP socket
	sock = socket(AF_INET, SOCK_DGRAM, 0);
	if (sock < 0) {
		perror("CLIENT: UDP socket creation failed.\n");
		return -1;
	}

	int opt = 1;
	setsockopt(sock, SOL_SOCKET, SO_BROADCAST, &opt, sizeof(opt));

	memset(&broadcast_addr, 0, sizeof(broadcast_addr));
	broadcast_addr.sin_family = AF_INET;
	broadcast_addr.sin_port = htons(DISCOVERY_PORT);
	broadcast_addr.sin_addr.s_addr = inet_addr("255.255.255.255");

	//sends UDP broadcast
	strcpy(buffer, "DISCOVER");
	if (sendto(sock, buffer, strlen(buffer), 0, (struct sockaddr*)&broadcast_addr, sizeof(broadcast_addr)) < 0) {
		perror("CLIENT: UDP broadcast failed.\n");
		close(sock);
		return -1;
	}

	//sets timeout value
	struct timeval timeout;
	timeout.tv_sec = DISCOVERY_TIMEOUT;
	timeout.tv_usec = 0;
	setsockopt(sock, SOL_SOCKET, SO_RCVTIMEO, (const char*)&timeout, sizeof(timeout));

	//receives response from server
	int num_recv = recvfrom(sock, buffer, sizeof(buffer) - 1, 0, (struct sockaddr*)&recv_addr, &addr_len);
	if (num_recv < 0) {
		perror("CLIENT: No server response.\n");
		close(sock);
		return -1;
	}

	buffer[num_recv] = '\0';
	//copies server IP from UDP reply
	strcpy(server_ip, inet_ntoa(recv_addr.sin_addr));
	close(sock);

	//returns join port
	return atoi(buffer);
}


int main(int argc, char *argv[]) {
	int joinsocket; //client socket
	struct sockaddr_in joinaddr, roomaddr;
	struct join_t join_req;

	//invokes function to discover server using UDP broadcast
	char sip[16];
	int server_port = discoverServer(sip);

	//if function returns -1, server was not found
	if (server_port <= 0) {
		printf("CLIENT: Unable to discover server.\n");
		exit(1);
	}

	printf("CLIENT: Server discovered.\n");

	//sets user input username
	printf("CLIENT: Enter username: ");
	fgets(join_req.username, sizeof(join_req.username), stdin);
	join_req.username[strcspn(join_req.username, "\n")] = 0;

	//takes user input chat room name
	printf("CLIENT: Enter room name: ");
	fgets(join_req.room_name, sizeof(join_req.room_name), stdin);
	join_req.room_name[strcspn(join_req.room_name, "\n")] = 0;

	//creates client socket
	joinsocket = socket(AF_INET, SOCK_STREAM, 0);
	if (joinsocket < 0) {
		perror("CLIENT: Socket creation failed.\n");
		exit(1);
	}

	memset(&joinaddr, 0, sizeof(joinaddr));
	joinaddr.sin_family = AF_INET;
	joinaddr.sin_port = htons(PROTOPORT);

	//checks network address
	if (inet_pton(AF_INET, sip, &joinaddr.sin_addr) <= 0) {
		perror("CLIENT: Invalid address.\n");
		exit(1);
	}

	//connects to server join port
	if (connect(joinsocket, (struct sockaddr*)&joinaddr, sizeof(joinaddr)) < 0) {
		perror("CLIENT: Server connection failed.\n");
		exit(1);
	}

	printf("CLIENT: Connected to server.\n");

	//sends join request to server
	if (send(joinsocket, &join_req, sizeof(join_req), 0) < 0) {
		perror("CLIENT: Send failed.\n");
		exit(1);
	}

	printf("CLIENT: Join request sent for room %s.\n", join_req.room_name);

	//receives room port from server join socket
	char buffer[BUFFER_SIZE];
	int num_recv = recv(joinsocket, buffer, sizeof(buffer) - 1, 0);
	if(num_recv <= 0) {
		printf("CLIENT: Failed to receive room port.\n");
		close(joinsocket);
		exit(1);
	}

	buffer[num_recv] = '\0';

	//room port from server
	int roomport = atoi(buffer);
	printf("CLIENT: Received room port %d.\n", roomport);

	//closes join socket connection
	close(joinsocket);

	//creates room socket using room port
	roomsocket = socket(AF_INET, SOCK_STREAM, 0);
	if (roomsocket < 0) {
		perror("CLIENT: Room socket creation failed.\n");
		exit(1);
	}

	memset(&roomaddr, 0, sizeof(roomaddr));
	roomaddr.sin_family = AF_INET;
	roomaddr.sin_port = htons(roomport);

	if (inet_pton(AF_INET, sip, &roomaddr.sin_addr) <= 0) {
		perror("CLIENT: Invalid address.\n");
		exit(1);
	}

	//connects to room socket
	if (connect(roomsocket, (struct sockaddr*)&roomaddr, sizeof(roomaddr)) < 0) {
		perror("CLIENT: Room port connection failed.\n");
		exit(1);
	}

	printf("CLIENT: Connected to room %s.\n", join_req.room_name);

	//sends username to room
	send(roomsocket, join_req.username, strlen(join_req.username), 0);

	//creates thread to receive messages
	pthread_t recv_thread;
	pthread_create(&recv_thread, NULL, receiveMsg, join_req.username);
	pthread_detach(recv_thread);

	//waits for initial message from server
	sleep(1);

	printf("CLIENT: You may begin chatting - Use /leave to exit.\n");
	allow_prompt = 1;

	char message[BUFFER_SIZE];

	//loop for sending messages
	while (running) {
		//displays username for client
		printf("%s: ", join_req.username);
		fflush(stdout);

		//takes user input message
		if (fgets(message, sizeof(message), stdin) != NULL) {
			message[strcspn(message, "\n")] = 0;

			//if the input message matches leave command, a leave request is sent
			if (strcmp(message, "/leave") == 0) {

				//confirms leave request
				printf("CLIENT: Leave room %s? (y/n) ", join_req.room_name);
				char confirm[10];
				fgets(confirm, sizeof(confirm), stdin);

				//leave request confirmed
				if (confirm[0] == 'y' || confirm[0] == 'Y') {
					//notify client of sent request
					printf("CLIENT: Sending leave request...");

					//sends leave request to room
					send(roomsocket, LEAVE_REQUEST, strlen(LEAVE_REQUEST), 0);

					//waits for server confirmation
					sleep(1);

					//ends messaging loop
					running = 0;
					break;
				}

				//if the leave request is denied, chatting continues
				else {
					//continues
					printf("CLIENT: Leave cancelled.\n");
					continue;
				}

			}

			if (strlen(message) > 0) {
				//sends message to room
				if (send(roomsocket, message, strlen(message), 0) < 0) {
					printf("CLIENT: Send failed.\n");
					running = 0;
					break;
				}
			}

		}

	} //end send loop


	//closes room socket
	close(roomsocket);
	printf("CLIENT: Disconnected from server.\n");
	return 0;
}
