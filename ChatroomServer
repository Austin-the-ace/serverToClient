#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/socket.h>
#include <sys/types.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <pthread.h>

#define PROTOPORT 5193
#define PEND_CONNECTIONS 20
#define BUFFER_SIZE 1024
#define MAX_ROOMS 20
#define MAX_CLIENTS_PER_ROOM 10
#define MAX_NAME_SIZE 64


//struct for threads
struct threadargs_t {
	int socket;
	int thread_id;
	char roomname[MAX_NAME_SIZE];
	char username[MAX_NAME_SIZE];
};


//struct for client information
struct clientinfo_t {
	int socket;
	char username[MAX_NAME_SIZE];
};


//struct for join requests
struct join_t {
	char roomname[MAX_NAME_SIZE];
	char username[MAX_NAME_SIZE];
};


//struct for chatrooms
struct chatroom_t {
	char name[MAX_NAME_SIZE];
	int port;
	struct clientinfo_t clients[MAX_CLIENTS_PER_ROOM];
	int client_count;
	pthread_mutex_t lock; //lock for individual rooms
};


//struct for messages
struct message_t {
	int type;
	char username[MAX_NAME_SIZE];
	char content[BUFFER_SIZE];
};


//definitions for chat rooms
struct chatroom_t rooms[MAX_ROOMS];
int room_count = 0;
int next_port = 9000;	//new chat room port
pthread_mutex_t rooms_lock = PTHREAD_MUTEX_INITIALIZER; //lock for multiple rooms



//searches for existing chat room from input room name
//returns desired room if found, null if room is not found
struct chatroom_t* findRoom(const char* roomname) {
	pthread_mutex_lock(&rooms_lock);

	//searches for room
	for (int i = 0; i < room_count; i++) {
		if (strcmp(rooms[i].name, roomname) == 0) {
			pthread_mutex_unlock(&rooms_lock);
			printf("SERVER: Found room %s.\n", roomname);
			return &rooms[i];
		}
	}

	//returns null if room is not found
	pthread_mutex_unlock(&rooms_lock);
	return NULL;
}



//creates and returns new chat room from input room name
//returns null if room cannot be created
struct chatroom_t* createRoom(const char* roomname) {
	pthread_mutex_lock(&rooms_lock);

	//checks if new room can be created
	if (room_count >= MAX_ROOMS) {
		pthread_mutex_unlock(&rooms_lock);
		return NULL;
	}

	//creates new room using input room name
	struct chatroom_t* room = &rooms[room_count++];
	strncpy(room->name, roomname, sizeof(room->name) - 1);
	room->port = next_port++;
	room->client_count = 0;
	pthread_mutex_unlock(&rooms_lock);

	printf("SERVER: Created new room %s on port %d.\n", roomname, room->port);

	//returns new room
	return room;
}



//adds client to room
//returns 0 for successful join, -1 for full room
int addClient(struct chatroom_t *room, int client_socket, const char* username) {
	pthread_mutex_lock(&room->lock);

	//checks if room has space for client
	if (room->client_count >= MAX_CLIENTS_PER_ROOM) {
		pthread_mutex_unlock(&room->lock);
		return -1;
	}

	//adds client to room
	room->clients[room->client_count].socket = client_socket;
	strncpy(room->clients[room->client_count].username, username, MAX_NAME_SIZE - 1);
	room->client_count++;

	printf("SERVER: Client added to room %s (%d/%d)\n", room->name, room->client_count, MAX_CLIENTS_PER_ROOM);

	//returns 0 on successful join
	pthread_mutex_unlock(&room->lock);
	return 0;
}



//removes client from room
void removeClient(struct chatroom_t* room, int client_socket) {
	pthread_mutex_lock(&room->lock);

	//searches for client to remove from room
	for (int i = 0; i < room->client_count; i++) {
		if (room->clients[i].socket == client_socket) {
			printf("SERVER: User %s removed from room %s.\n", room->clients[i].username, room->name);

			//shifts remaining occupants in client count array
			for (int j = i; j < room->client_count - 1; j++) {
				room->clients[j] = room->clients[j + 1];
			}

			//updates number of occupants
			room->client_count--;
			break;
		}
	}
	

	pthread_mutex_unlock(&room->lock);
}



//broadcasts messages to all occupants of chat room
//TEST REMOVING SENDER FROM SEND LIST
void broadcast(struct chatroom_t* room, const char* msg, int sender) {
	pthread_mutex_lock(&room->lock);

	//sends message to all room occupants, including sender
	for (int i = 0; i < room->client_count; i++) {
		send(room->clients[i].socket, msg, strlen(msg), 0);
	}

	pthread_mutex_unlock(&room->lock);
}



//handles messaging and individual clients in room
void* chatHandler(void* arg) {
	struct chatroom_t* room = (struct chatroom_t*)arg;
	int client_socket = room->clients[room->client_count - 1].socket;
	char username[MAX_NAME_SIZE];
	strcpy(username, room->clients[room->client_count - 1].username);

	char buffer[BUFFER_SIZE];
	char format_msg[BUFFER_SIZE + MAX_NAME_SIZE + 10];

	//sends confirmation to individual client
	snprintf(buffer, sizeof(buffer), "SERVER: Joined room %s successfully.\n", room->name);
	send(client_socket, buffer, strlen(buffer), 0);

	//broadcasts occupancy update to clients in room
	snprintf(format_msg, sizeof(format_msg), "SERVER: User %s has joined %s (%d/%d)\n", username, room->name, room->client_count, MAX_CLIENTS_PER_ROOM);
	broadcast(room, format_msg, client_socket);

	//messaging loop
	while (1) {
		memset(buffer, 0, sizeof(buffer));
		int num_recv = recv(client_socket, buffer, sizeof(buffer) - 1, 0);

		//processes client disconnection
		if (num_recv <= 0) {
			printf("SERVER: User %s disconnected from room %s.\n", username, room->name);

			snprintf(format_msg, sizeof(format_msg), "SERVER: User %s has left %s (%d/%d)\n", username, room->name, room->client_count, MAX_CLIENTS_PER_ROOM);
			broadcast(room, format_msg, client_socket);

			removeClient(room, client_socket);
			close(client_socket);
			break;
		}

		buffer[num_recv] = '\0';
		buffer[strcspn(buffer, "\n")];

		//sends formatted messages to room occupants using broadcast function
		snprintf(format_msg, sizeof(format_msg), "%s: %s\n", username, buffer);
		broadcast(room, format_msg, client_socket);

	}

	pthread_exit(0);
}



//worker thread
//invokes function to create room and connects first client
void* roomHandler(void *arg) {
	struct chatroom_t* room = (struct chatroom_t*)arg;
	int roomsocket;
	struct sockaddr_in roomaddr;

	//creates socket for room
	roomsocket = socket(AF_INET, SOCK_STREAM, 0);
	if (roomsocket < 0) {
		perror("SERVER: Room socket creation failed.");
		pthread_exit(0);
	}

	//allows for room socket to be reused
	int opt = 1;
	setsockopt(roomsocket, SOL_SOCKET, SO_REUSEADDR, &opt, sizeof(opt));

	memset(&roomaddr, 0, sizeof(roomaddr));
	roomaddr.sin_family = AF_INET;
	roomaddr.sin_addr.s_addr = INADDR_ANY;
	roomaddr.sin_port = htons(room->port);

	//binds room socket
	if (bind(roomsocket, (struct sockaddr*)&roomaddr, sizeof(roomaddr)) < 0) {
		perror("SERVER: Room bind failed.\n");
		close(roomsocket);
		pthread_exit(0);
	}

	//listens on room socket
	if (listen(roomsocket, PEND_CONNECTIONS) < 0) {
		perror("SERVER: Room listen failed.\n");
		close(roomsocket);
		pthread_exit(0);
	}

	printf("SERVER: Room %s listening on port %d...\n", room->name, room->port);

	//room loop to accept clients
	while (1) {
		struct sockaddr_in client_addr;
		socklen_t addrlen = sizeof(client_addr);

		//accepts clients to join room
		int client_s = accept(roomsocket, (struct sockaddr*)&client_addr, &addrlen);

		if (client_s < 0) {
			perror("SERVER: Room accept failed.\n");
			continue;
		}

		//receives username from client
		char username[MAX_NAME_SIZE];
		int num_recv = recv(client_s, username, sizeof(username) - 1, 0);
		if (num_recv <= 0) {
			close(client_s);
			continue;
		}

		username[num_recv] = '\0';

		//invokes function to add client to room
		int isFull = addClient(room, client_s, username);

		//checks if room is full
		if (isFull < 0) {
			char* msg = "SERVER: Room is full.\n";
			//notifies client
			send(client_s, msg, strlen(msg), 0);
			close(client_s);
			continue;
		}

		//creates chat thread for client
		pthread_t client_thread;
		pthread_create(&client_thread, NULL, chatHandler, (void*)room);
		pthread_detach(client_thread);
	}

	//closes room socket
	close(roomsocket);
	pthread_exit(0);
}



int main(void) {
	int server_s, client_s;				//server and client sockets
	struct sockaddr_in saddr, caddr;	//socket addresses
	socklen_t addrlen = sizeof(caddr);	//socket address length
	pthread_t worker_threads[200];		//array for worker threads

	//creates socket
	server_s = socket(AF_INET, SOCK_STREAM, 0);

	if (server_s < 0) {
		perror("SERVER: Join socket creation failed.\n");
		exit(1);
	}

	//allows socket to be reused
	int opt = 1;
	setsockopt(server_s, SOL_SOCKET, SO_REUSEADDR, &opt, sizeof(opt));

	memset(&saddr, 0, sizeof(saddr));
	saddr.sin_family = AF_INET;
	saddr.sin_addr.s_addr = INADDR_ANY;
	saddr.sin_port = htons(PROTOPORT);

	//binds socket
	if (bind(server_s, (struct sockaddr*)&saddr, sizeof(saddr)) < 0) {
		perror("SERVER: Bind failed.\n");
		exit(1);
	}

	//listens on join socket
	if (listen(server_s, PEND_CONNECTIONS) < 0) {
		perror("SERVER: Listen failed.\n");
		exit(1);
	}

	//displays server initial message
	printf("SERVER: Listening on join port...\n");

	//main loop
	while (1) {
		//accepts join requests
		client_s = accept(server_s, (struct sockaddr*)&caddr, &addrlen);

		if (client_s < 0) {
			perror("SERVER: Accept failed.\n");
			continue;
		}

		//displays connection message
		printf("SERVER: Client connected from %s:%d\n", inet_ntoa(caddr.sin_addr), ntohs(caddr.sin_port));
		
		//creates join request
		struct join_t join_req;
		int num_recv = recv(client_s, &join_req, sizeof(join_req), 0);

		if (num_recv <= 0) {
			printf("SERVER: Join request failed.\n");
			close(client_s);
			continue;
		}

		//invokes function to search for existing room
		struct chatroom_t* room = findRoom(join_req.roomname);

		//if room already exists, port is sent to client, join request connection closes
		if (room != NULL) {
			char response[BUFFER_SIZE];
			snprintf(response, sizeof(response), "%d", room->port);
			send(client_s, response, strlen(response), 0);

			close(client_s);
		}

		//if room isn't found, creates new worker thread
		if (room == NULL) {
			//creates room
			room = createRoom(join_req.roomname);

			//if function returns null, maximum number of rooms has been reached
			if (room == NULL) {
				char* msg = "SERVER: Unable to create room - maximum number of rooms reached.\n";
				printf("%s", msg);
				//notifies client
				send(client_s, msg, strlen(msg), 0);
				close(client_s);
				continue;
			}

			//creates worker thread
			pthread_create(&worker_threads[room_count - 1], NULL, roomHandler, (void*)room);
			pthread_detach(worker_threads[room_count - 1]);

			//sleeps to allow worker thread time for set up
			usleep(1000000);
		}

		//after new room is created, port is sent to client
		char response[BUFFER_SIZE];
		snprintf(response, sizeof(response), "%d", room->port);
		send(client_s, response, strlen(response), 0);
		close(client_s);

	} //end main loop

	//closes server socket
	close(server_s);
	return 0;
}

